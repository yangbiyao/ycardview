<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.myapplication.YCardView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        app:YCardView_ConnerRadius="7dp"
        app:YCardView_ShadowEndColor="#00000000"
        app:YCardView_ShadowStartColor="#0e000000"
        app:YCardView_ShadowWith="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.example.myapplication.YCardView>
    <com.example.myapplication.YCardView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        app:YCardView_ConnerRadius="7dp"
        app:YCardView_ShadowEndColor="#000000ff"
        app:YCardView_ShadowStartColor="#0eff0000"
        app:YCardView_ShadowWith="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.example.myapplication.YCardView>
    <com.example.myapplication.YCardView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        app:YCardView_ConnerRadius="7dp"
        app:YCardView_ShadowEndColor="#003300ff"
        app:YCardView_ShadowStartColor="#0e0033"
        app:YCardView_ShadowWith="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.example.myapplication.YCardView>
</LinearLayout>